{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "rules": {
     "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "new-cap": 0,
    "consistent-return": 0,
    "no-param-reassign": 0,
    "comma-dangle": 0,
    "curly": ["error", "multi-line"],
    "import/no-unresolved": [2, { "commonjs": true }],
    "no-shadow": ["error", { "allow": ["req", "res", "err"] }],
    "no-underscore-dangle": ["error", { "allow": ["_id"] }]
  },
  "env": {
    "browser": true,
    "jest": true,
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  }
}
